<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/activity_background">

    <include layout="@layout/simple_top"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/activity_item_background"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/activity_item_margin_top"
        android:paddingLeft="7dp"
        android:paddingRight="7dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_item_height"
            android:paddingLeft="10dp"
            android:text="新消息提示"
            android:gravity="center_vertical"
            android:textColor="#000"/>
        <include layout="@layout/gray_line"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_item_height"
            android:paddingLeft="10dp"
            android:text="勿扰模式"
            android:gravity="center_vertical"
            android:textColor="#000"/>
        <include layout="@layout/gray_line"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_item_height"
            android:paddingLeft="10dp"
            android:text="聊天"
            android:gravity="center_vertical"
            android:textColor="#000"/>
        <include layout="@layout/gray_line"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_item_height"
            android:paddingLeft="10dp"
            android:text="隐私"
            android:gravity="center_vertical"
            android:textColor="#000"/>
        <include layout="@layout/gray_line"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_item_height"
            android:paddingLeft="10dp"
            android:text="通用"
            android:gravity="center_vertical"
            android:textColor="#000"/>
        <include layout="@layout/gray_line"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_item_height"
            android:paddingLeft="10dp"
            android:text="账号与安全"
            android:gravity="center_vertical"
            android:textColor="#000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/activity_item_margin_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/activity_item_background"
        android:orientation="vertical"
        android:paddingLeft="7dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_item_height"
            android:paddingLeft="10dp"
            android:text="关于小伙伴"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:id="@+id/id_about"/>
        <include layout="@layout/gray_line"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_item_height"
            android:paddingLeft="10dp"
            android:text="退出"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:id="@+id/id_exit"/>
        <include layout="@layout/gray_line"/>
    </LinearLayout>

</LinearLayout>