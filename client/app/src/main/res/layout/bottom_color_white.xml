<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="#eee">

    <ImageView
        android:layout_width="95dp"
        android:layout_height="2dp"
        android:background="@drawable/tabline"
        android:id="@+id/id_tab_line"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/hall_normal"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:text="大厅"
                    android:textSize="9sp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/follow_normal"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:text="关注"
                    android:textSize="9sp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/surprise_normal"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:text="发现"
                    android:textSize="9sp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/profile_normal"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:text="我"
                    android:textSize="9sp"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/id_hall_layout">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/hall_selected"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:text="大厅"
                    android:textSize="9sp"
                    android:textColor="#00e000"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/id_follow_layout"
                android:alpha="0">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/follow_selected"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:text="关注"
                    android:textSize="9sp"
                    android:textColor="#00e000"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/id_surprise_layout"
                android:alpha="0">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/surprise_selected"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:text="发现"
                    android:textSize="9sp"
                    android:textColor="#00e000"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/id_profile_layout"
                android:alpha="0">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/profile_selected"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:text="我"
                    android:textSize="9sp"
                    android:textColor="#00e000"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>